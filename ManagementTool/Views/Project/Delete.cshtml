@model ManagementTool.Models.C004_PROJECT

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int index = 1;
    bool ItemCanbeDeleted = true;

    var PhaseDictionary  = (Dictionary<int, string[]>)ViewBag.Phase;
    var BucketDictionary = (Dictionary<int, string[]>)ViewBag.Bucket;
}

<br />
<div class="row">

    <div class="col-lg-10 col-lg-offset-1">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Are you Sure you want to delete this : @Html.DisplayFor(model => model.ProjectName)</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">

                    <!-- / Location Name -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Location :</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.C010_LOCATION.LocationName, htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- / Company Name -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Company Name :</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.C011_COMPANY.CompanyName, htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>


                    <!-- / Division Name -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Division :</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.C001_DIVISION.DivisionName, htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- / Area Name -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Area :</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.C002_AREA.AreaName, htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- / Sub Area Name -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label"> Sub Area :</label>
                        <div class="col-lg-9">
                            <input value="@ViewBag.SubAreaId" id="SubAreaId" name="SubAreaId" type="text" class="form-control m-b" readonly="readonly" style="font-weight:normal; background-color : white;" />
                        </div>
                    </div>

                    <!-- / Project Name -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Project Name :</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.ProjectName, htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- / Start Date -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Start Date :</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.StartDate, "{0:dd-MMM-yyyy}", htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- / End Date -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">End Date :</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.EndDate, "{0:dd-MMM-yyyy}", htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- / Project Type -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Project Type :</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.C013_PROJECT_TYPE.ProjectType, htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- / Project Active -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Active</label>
                        <div class="col-lg-9 ">
                            @if (Model.IsActive == true)
                            {
                                WriteLiteral("<i class='fa fa-check-square text-navy m-b'></i>");
                            }
                            else
                            {
                                WriteLiteral("<i class='fa fa-square text-navy m-b'></i>");
                            }
                        </div>
                    </div>

                    <!-- / Generated By -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Record Generated By </label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.EndUser.UserName, htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- / Generated Date -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Record Generated Date</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.GeneratedDate, "{0:dd-MMM-yyyy HH:mm}", htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    @if ((PhaseDictionary.Count() > 0) || (BucketDictionary.Count() > 0))
                    {
                        <br />
                        <div class="form-group">
                            <div class="col-lg-12">
                                <p class="font-bold  alert alert-warning m-b-sm">
                                    This project details are nested in following phases and buckets. Project must be removed from there first before it can be deleted from here.
                                </p>
                            </div>
                        </div>

                    }

                        <table class="table table-striped" id="Phase">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Phase Name</th>
                                    <th>Generated By</th>
                                    <th>Activity Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in PhaseDictionary){
                                ItemCanbeDeleted = false;
                                string[] details = item.Value;
                            <tr>
                                <td>@index      </td>
                                <td>@details[0] </td>
                                <td>@details[1] </td>
                                <td>@details[2] </td>
                                <td><a href="@Url.Action("Edit","Phase", new { id = item.Key })" class="btn btn-xs btn-outline btn-primary">Open <i class="fa fa-cubes"></i></a></td>
                            </tr>
                                index = index + 1;
                            }
                            </tbody>
                        </table>

                        <table class="table table-striped" id="Bucket">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Bucket Name</th>
                                    <th>Generated By</th>
                                    <th>Activity Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in BucketDictionary) {
                                string[] details = item.Value;
                                ItemCanbeDeleted = false;
                            <tr>
                                <td>@index      </td>
                                <td>@details[0] </td>
                                <td>@details[1] </td>
                                <td>@details[2] </td>
                                <td><a href="@Url.Action("Edit","Bucket", new { id = item.Key })" class="btn btn-xs btn-outline btn-primary">Open <i class="fa fa-folder-open-o"></i></a></td>
                            </tr>
                                index = index + 1;
                            }
                            </tbody>
                        </table>

                        <!-- / Close Button -->
                        <div class="form-group">
                            @if (ItemCanbeDeleted == true)
                            {
                                <div class="col-lg-12">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.HiddenFor(model => model.ProjectId)
                                        <input type="submit" value="Delete" class="btn btn-default" />
                                    }
                                    @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-sm btn-primary pull-right m-t-n-xs" })
                                </div>
                            }
                            else {
                                <div class="col-lg-12">
                                    @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-sm btn-primary pull-right m-t-n-xs" })
                                </div>
                            }
                        </div>

                    </div>
            </div>
        </div>
    </div>
</div>