@model IEnumerable<ManagementTool.Models.C001_PROJECT>

@{
    int index = 1;
    ViewBag.Title = "Project Listing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<br />
<div class="row">
    <br />
    <div class="col-lg-12">
        <button class="btn btn-sm btn-primary pull-left m-t-n-xs" type="button" onclick="window.location.href='@Url.Content("~/Project/Create")'"><strong>Add New Project</strong></button>
    </div>


    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Complete Projects Listing</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Project Name </th>
                                <th>Location Name </th>
                                <th>Company Name </th>
                                <th>Division Name</th>
                                <th>Project Type</th>                                
                                <th>Generated Date </th>
                                <th>Generated By</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@index</td>
                                    <td>@item.ProjectName <small><i>project title</i></small>               </td>
                                    <td>@Html.DisplayFor(modelItem => item.C007_LOCATION.LocationName)      </td>
                                    <td>@Html.DisplayFor(modelItem => item.C008_COMPANY.CompanyName)        </td>
                                    <td>@Html.DisplayFor(modelItem => item.C009_DIVISION.DivisionName)      </td>
                                    <td>@Html.DisplayFor(modelItem => item.C013_PROJECT_TYPE.ProjectType)   </td>
                                    <td>@item.GeneratedDate.ToString("MMM dd, yyyy")                        </td>
                                    <td>@Html.DisplayFor(modelItem => item.EndUser.UserName)                </td>                                    
                                    <td><i class="fa fa-check-square text-navy"></i><!--i class="fa fa-square text-navy"></i--></td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ProjectId }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.ProjectId }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ProjectId })
                                    </td>
                                </tr>
                                index = index + 1;
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

</div>