@model IEnumerable<ManagementTool.Models.C004_PROJECT>

@{
    int index = 1;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="/Content/css/plugins/toastr/toastr.min.css" rel="stylesheet">
<br />
<div class="row">
    <br />
    <div class="col-lg-12">
        <button class="btn btn-sm btn-primary pull-left m-t-n-xs" type="button" onclick="window.location.href='@Url.Content("~/Project/Create")'"><strong>Add New Project</strong></button>
    </div>


    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Complete Projects Listing</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content" id="ibox1">
                <div class="sk-spinner sk-spinner-cube-grid">
                    <div class="sk-cube"></div>
                    <div class="sk-cube"></div>
                    <div class="sk-cube"></div>
                    <div class="sk-cube"></div>
                    <div class="sk-cube"></div>
                    <div class="sk-cube"></div>
                    <div class="sk-cube"></div>
                    <div class="sk-cube"></div>
                    <div class="sk-cube"></div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped" id="tblList">
                        <thead>
                            <tr>
                                <th colspan="9">
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Select Division </label>
                                        <div class="col-lg-10">
                                            @Html.DropDownList("DivisionId", null, "Select Division", htmlAttributes: new { @class = "form-control m-b", onchange = "FillArea(this);" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Select Area </label>
                                        <div class="col-lg-10">                                            
                                                @Html.DropDownList("AreaId", null, "Select Area", htmlAttributes: new { @class = "form-control m-b", onchange = "FillSubArea(this);" , disabled = "disabled" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Select Sub Area </label>
                                        <div class="col-lg-10">
                                            @using (Html.BeginForm("Index", "Project", FormMethod.Post)){
                                                @Html.DropDownList("SubAreaId", null, "Select Sub Area", htmlAttributes: new { @class = "form-control m-b", onchange = "FillProjectsList(this);" })
                                            }
                                        </div>
                                    </div>
                                </th>
                            </tr>

                            <tr>
                                <th>#</th>
                                <th>Division Name</th>
                                <th>Area Name </th>
                                <th>SubArea Name </th>
                                <th>Project Name </th>
                                <th>Status</th>
                                <th>Generated By</th>
                                <th>Generated Date </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@index                              </td>
                                    <td>@item.C001_DIVISION.DivisionName    </td>
                                    <td>@item.C002_AREA.AreaName            </td>
                                    <td>&nbsp;</td>
                                    <td>@item.ProjectName                   </td>
                                    <td>
                                        @if (item.IsActive == true)
                                        {
                                            WriteLiteral("<i class='fa fa-check-square text-navy'></i>");
                                        }
                                        else
                                        {
                                            WriteLiteral("<i class='fa fa-square text-navy'></i>");
                                        }
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.EndUser.UserName)                </td>
                                    <td>@item.GeneratedDate.ToString("MMM dd, yyyy")                        </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ProjectId }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.ProjectId }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ProjectId })
                                    </td>
                                </tr>
                                index = index + 1;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/js/pages/project.js"></script>