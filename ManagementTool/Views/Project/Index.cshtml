@model IEnumerable<ManagementTool.Models.C004_PROJECT>

@{
    int index = 1;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="row">
    <br />
    <div class="col-lg-12">
        <button class="btn btn-sm btn-primary pull-left m-t-n-xs" type="button" onclick="window.location.href='@Url.Content("~/Project/Create")'"><strong>Add New Project</strong></button>
    </div>


    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Complete Projects Listing</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped" id="tblList">
                        <thead>
                            <tr>
                                <th colspan="9">
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Select Division </label>
                                        <div class="col-lg-10">
                                            @Html.DropDownList("DivisionId", null, "Select Division", htmlAttributes: new { @class = "form-control m-b", onchange = "FillArea(this);" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Select Area </label>
                                        <div class="col-lg-10">                                            
                                                @Html.DropDownList("AreaId", null, "Select Area", htmlAttributes: new { @class = "form-control m-b", onchange = "FillSubArea(this);" , disabled = "disabled" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Select Sub Area </label>
                                        <div class="col-lg-10">
                                            @using (Html.BeginForm("Index", "Project", FormMethod.Post)){
                                                @Html.DropDownList("SubAreaId", null, "Select Sub Area", htmlAttributes: new { @class = "form-control m-b", onchange = "FillProjectsList(this);" })
                                            }
                                        </div>
                                    </div>
                                </th>
                            </tr>

                            <tr>
                                <th>#</th>
                                <th>Division Name</th>
                                <th>Area Name </th>
                                <th>SubArea Name </th>
                                <th>Project Name </th>
                                <th>Status</th>
                                <th>Generated By</th>
                                <th>Generated Date </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td colspan="9">clear it </td>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@index                              </td>
                                    <td>@item.C001_DIVISION.DivisionName    </td>
                                    <td>@item.C002_AREA.AreaName            </td>
                                    <td>&nbsp;</td>
                                    <td>@item.ProjectName                   </td>
                                    <td>
                                        @if (item.IsActive == true)
                                        {
                                            WriteLiteral("<i class='fa fa-check-square text-navy'></i>");
                                        }
                                        else
                                        {
                                            WriteLiteral("<i class='fa fa-square text-navy'></i>");
                                        }
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.EndUser.UserName)                </td>
                                    <td>@item.GeneratedDate.ToString("MMM dd, yyyy")                        </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ProjectId }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.ProjectId }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ProjectId })
                                    </td>
                                </tr>
                                index = index + 1;
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
<script type="text/javascript">

    function FillProjectsList(obj) {    
        var selDiv      = $('#DivisionId').find(":selected").val();
        var selArea     = $('#AreaId')    .find(":selected").val();
        var selSArea    = $('#SubAreaId') .find(":selected").val();

        if ((selDiv == "") || (selArea == "")) {
            return;
        }

        var postedContent = { dv: selDiv, area: selArea, sarea: selSArea }
        $.ajax({
            type: "POST",
            url: "/Project/GetProjectsListBySubArea",
            data: postedContent,
            success: function (message) {
                var res = message.data;
                if (res.length > 0) {
                    var innerhtml = "";
                    $("#tblList > tbody").empty();
                    for (var i = 0; i < message.data.length; i++) {                        
                        innerhtml += "<tr>" +
                                        "<td>" + (i + 1) + "</td>" +
                                        "<td>" + message.data[i].pl.DivisionName + "</td>" +
                                        "<td>" + message.data[i].pl.AreaName     + "</td>" +
                                        "<td>" + message.data[i].pl.SubAreaName  + "</td>" +
                                        "<td>" + message.data[i].pl.ProjectName  + "</td>" +
                                        "<td>" + message.data[i].pl.IsActive     + "</td>" +
                                        "<td>" + message.data[i].pl.GeneratedByName + "</td>" +
                                     "</tr>";

                    } // end of for loop
                    $("#tblList > tbody").append(innerhtml);
                } // end of if for length
                else {                    
                }
            },
            error: function (xerr) {
                /* $('#txteng').val("err : " +xerr);*/
            }
        });




    }


    function FillSubArea(obj) {
        var sel = obj.options[obj.selectedIndex].value;
        var selText = obj.options[obj.selectedIndex].text
        if (sel == "") { return; }



        var postedContent = { SelectedArea: sel }
        $.ajax({
            type: "POST",
            url: "/Project/GetSubAreaByArea",
            data: postedContent,
            success: function (message) {
                $("#SubAreaId").empty()
                var res = message.data;

                if (res.length > 0) {
                    $('#SubAreaId').append($('<option>', { value: "", text: "Select Sub Area", selected: true }));
                    for (var i = 0; i < message.data.length; i++) {
                        $('#SubAreaId').append($('<option>', { value: message.data[i].SubAreaId, text: message.data[i].SubAreaName }));
                    } // end of for loop
                } // end of if for length
                else {
                    $('#SubAreaId').append($('<option>', { value: '', text: "No Sub Area For " + selText }));
                }
            },
            error: function (xerr) {
                /* $('#txteng').val("err : " +xerr);*/
            }
        });
    }

    function FillArea(obj) {
        var sel = obj.options[obj.selectedIndex].value;
        if (sel == "") { return; }

        var postedContent = { SelectedDivision: sel }
        $.ajax({
            type: "POST",
            url: "/Project/GetSubAreaByDivision",
            data: postedContent,
            success: function (message) {
                var res = message.data;
                $("#AreaId").prop('disabled', false);
                $("#AreaId").empty()
                if (res.length > 0) {
                    for (var i = 0; i < message.data.length; i++) {
                        $('#AreaId').append($('<option>', { value: message.data[i].AreaId, text: message.data[i].AreaName }));
                    } // end of for loop
                } // end of if for length
            },
            error: function (xerr) {
                /* $('#txteng').val("err : " +xerr);*/
            }
        });

    }
</script>
