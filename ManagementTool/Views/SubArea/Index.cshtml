@model IEnumerable<ManagementTool.Models.C003_SUB_AREA>

@{
    int index = 1;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<div class="row">
    <br />
    <div class="col-lg-12">
        <button class="btn btn-sm btn-primary pull-left m-t-n-xs" type="button" onclick="window.location.href='@Url.Content("~/SubArea/Create")'"><strong>Add New Sub Area</strong></button>
    </div>


    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Complete Sub Area Listing</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>                                
                                <th>Area Name </th>
                                <th>Sub Area Name</th>
                                <th>Status</th>
                                <th>Generated By</th>
                                <th>Generated Date </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@index                              </td>
                                    <td>@item.C002_AREA.AreaName            </td>
                                    <td>@item.SubAreaName                   </td>
                                    <td>
                                        @if (item.AreaActive == true)
                                        {
                                            WriteLiteral("<i class='fa fa-check-square text-navy'></i>");
                                        }
                                        else
                                        {
                                            WriteLiteral("<i class='fa fa-square text-navy'></i>");
                                        }
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.EndUser.UserName)                </td>
                                    <td>@item.GeneratedDate.ToString("MMM dd, yyyy")                        </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.SubAreaId }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.SubAreaId }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.SubAreaId })
                                    </td>
                                </tr>
                                index = index + 1;
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>