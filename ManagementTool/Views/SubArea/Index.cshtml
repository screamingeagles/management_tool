@model IEnumerable<ManagementTool.Models.C003_SUB_AREA>

@{
    int index = 1;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<div class="row">
    <br />
    <div class="col-lg-12">
        <!--  window.location.href='(at) Url.Content("~/SubArea/Create")' -->
        <button class="btn btn-sm btn-primary pull-left m-t-n-xs" type="button" onclick="newOnClick();"><strong>Add New Sub Area</strong></button>
    </div>
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5 id="dvDetails">Filters</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>

            <div class="ibox-content">
                <div class="table-responsive">
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Select Division </label>
                        <div class="col-lg-10">
                            @Html.DropDownList("DivisionId", null, "Select Division", htmlAttributes: new { @class = "form-control m-b", onchange = "FillArea(this);" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Select Area </label>
                        <div class="col-lg-10">
                            @using (Html.BeginForm("Index", "SubArea", FormMethod.Post))
                            {
                                @Html.DropDownList("AreaId", null, "Select Area", htmlAttributes: new { @class = "form-control m-b", onchange = "this.form.submit()" })
                                <input type="hidden" name="DivisionId" value="@ViewBag.DivId" />
                            }
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Complete Sub Area Listing</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>                                
                                <th>Area Name </th>
                                <th>Sub Area Name</th>
                                <th>Status</th>
                                <th>Generated By</th>
                                <th>Generated Date </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@index                              </td>
                                    <td>@item.C002_AREA.AreaName            </td>
                                    <td>@item.SubAreaName                   </td>
                                    <td>
                                        @if (item.AreaActive == true)
                                        {
                                            WriteLiteral("<i class='fa fa-check-square text-navy'></i>");
                                        }
                                        else
                                        {
                                            WriteLiteral("<i class='fa fa-square text-navy'></i>");
                                        }
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.EndUser.UserName)                </td>
                                    <td>@item.GeneratedDate.ToString("MMM dd, yyyy")                        </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.SubAreaId }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.SubAreaId }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.SubAreaId })
                                    </td>
                                </tr>
                                index = index + 1;
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function FillArea(obj) {
        var sel = obj.options[obj.selectedIndex].value;
        if (sel == "") { return; }

        $('input[name="DivisionId"]').val(sel);

        var postedContent = { SelectedDivision: sel }
        $.ajax({
            type: "POST",
            url: "/Project/GetSubAreaByDivision",
            data: postedContent,
            success: function (message) {
                var res = message.data;
                $("#AreaId").prop('disabled', false);
                $("#AreaId").empty()
                if (res.length > 0) {
                    for (var i = 0; i < message.data.length; i++) {
                        $('#AreaId').append($('<option>', { value: message.data[i].AreaId, text: message.data[i].AreaName }));
                    } // end of for loop
                } // end of if for length
            },
            error: function (xerr) {
                /* $('#txteng').val("err : " +xerr);*/
            }
        });

    }

    function newOnClick() {
        var selValue = $('#AreaId').find(":selected").val();
        window.location.href = "/SubArea/Create/" + selValue;
    }
</script>