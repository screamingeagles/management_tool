@model ManagementTool.Models.C003_SUB_AREA

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int index = 1;
    bool ItemCanbeDeleted = true;

    var ProjectDictionary = (Dictionary<int, string[]>)ViewBag.Project;
}

<br />
<div class="row">

    <div class="col-lg-10 col-lg-offset-1">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Are you sure you want to delete Area : @Html.DisplayFor(model => model.SubAreaName) ?</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">

                    <!-- / Area Name -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Area Name</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.C002_AREA.AreaName, htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- / SubArea Name -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Sub Area Name</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.SubAreaName, htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- / Active -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Active</label>
                        <div class="col-lg-9 ">
                            @if (Model.AreaActive == true)
                            {
                                WriteLiteral("<i class='fa fa-check-square text-navy m-b'></i>");
                            }
                            else
                            {
                                WriteLiteral("<i class='fa fa-square text-navy m-b'></i>");
                            }
                        </div>
                    </div>

                    <!-- / Generated By -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Record Generated By </label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.EndUser.UserName, htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- / Generated Date -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Record Generated Date</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.GeneratedDate, "{0:dd-MMM-yyyy HH:mm}", htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>



                    @if (ProjectDictionary.Count() > 0) {

                        <div class="form-group">
                            <div class="col-lg-12">
                                <p class="font-bold  alert alert-warning m-b-sm">
                                    This <b>Sub Area</b> details are nested in following Projects.
                                    Sub Area must be removed from nesting before it can be deleted from here.
                                </p>
                            </div>
                        </div>

                        <table class="table table-striped" id="Bucket">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Project Name</th>
                                    <th>Generated By</th>
                                    <th>Activity Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ProjectDictionary)
                                {
                                    string[] details = item.Value;
                                    ItemCanbeDeleted = false;
                                    <tr>
                                        <td>@index      </td>
                                        <td>@details[0] </td>
                                        <td>@details[1] </td>
                                        <td>@details[2] </td>
                                        <td><a href="@Url.Action("Edit","Project", new { id = item.Key })" class="btn btn-xs btn-outline btn-primary">Open <i class="fa fa-folder-open-o"></i></a></td>
                                    </tr>
                                    index = index + 1;
                                }
                            </tbody>
                        </table>

                    }


                    <!-- / Close Button -->
                    <div class="form-group">
                        <div class="col-lg-12">
                            @if (ItemCanbeDeleted == true) {
                                using (Html.BeginForm()) {
                                    @Html.AntiForgeryToken()
                                    @Html.HiddenFor(model => model.SubAreaId)
                                    <input type="submit" value="Delete" class="btn btn-default" />
                                }
                                @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-sm btn-primary pull-right m-t-n-xs" })
                            }
                            else
                            {
                                @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-sm btn-primary pull-right m-t-n-xs" })
                            }
                            
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>