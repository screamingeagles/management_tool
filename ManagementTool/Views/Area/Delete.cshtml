@model ManagementTool.Models.C002_AREA

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">

    <div class="col-lg-10 col-lg-offset-1">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Are you sure you want to delete Area : @Html.DisplayFor(model => model.AreaName) ?</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">

                    <!-- / Division Name -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Division Name</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.C001_DIVISION.DivisionName, htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>


                    <!-- / Area Name -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Area Name</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.AreaName, htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- / Active -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Active</label>
                        <div class="col-lg-9 ">
                            @if (Model.isActive == true)
                            {
                                WriteLiteral("<i class='fa fa-check-square text-navy m-b'></i>");
                            }
                            else
                            {
                                WriteLiteral("<i class='fa fa-square text-navy m-b'></i>");
                            }
                        </div>
                    </div>


                    <!-- / Generated By -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Record Generated By </label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.EndUser.UserName, htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- / Generated Date -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Record Generated Date</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.GeneratedDate, "{0:dd-MMM-yyyy HH:mm}", htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- / Close Button -->
                    <div class="form-group">
                        <div class="col-lg-12">
                            @using (Html.BeginForm()) {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(model => model.AreaId)
                                <input type="submit" value="Delete" class="btn btn-default" />
                            }
                            @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-sm btn-primary pull-right m-t-n-xs" })
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>