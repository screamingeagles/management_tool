@model ManagementTool.Models.C004_BUCKET

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-lg-10 col-lg-offset-1">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>View Details For Bucket : @Html.DisplayFor(model => model.Name)</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">

                    <!-- /Bucket Name -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">New Bucket Name</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- /Sub Phase Name -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Select Sub Phase</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.C003_SUB_PHASE.SubPhaseName, htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- / Phase Name -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Select Phase</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.C002_PHASE.PhaseName, htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- / Project Name -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Select Project</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.C001_PROJECT.ProjectName, htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- / Generated By -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Record Generated By </label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.EndUser.UserName, htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- / Generated Date -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Record Generated Date</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.GenerationDate, "{0:dd-MMM-yyyy HH:mm}", htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- / Close Button -->
                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-sm btn-primary pull-right m-t-n-xs" })
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

