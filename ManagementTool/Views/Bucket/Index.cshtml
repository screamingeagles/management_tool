@model IEnumerable<ManagementTool.Models.C004_BUCKET>

@{
    int index = 1;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <br />
    <div class="col-lg-12">
        <button class="btn btn-sm btn-primary pull-left m-t-n-xs" type="button" onclick="window.location.href='@Url.Content("~/Bucket/Create")'"><strong>Add New Bucket</strong></button>
    </div>


    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Complete Bucket Listing</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Bucket Name </th>
                                <th>Sub Phase Name </th>
                                <th>Project Name </th>
                                <th>Phase Name </th>
                                <th>Generated Date </th>
                                <th>Generated By</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@index</td>
                                    <td>@item.Name</td>
                                    <td><small>@Html.DisplayFor(modelItem => item.C001_PROJECT.ProjectName)</small></td>
                                    <td><small>@Html.DisplayFor(modelItem => item.C002_PHASE.PhaseName)</small></td>
                                    <td><small>@Html.DisplayFor(modelItem => item.C003_SUB_PHASE.SubPhaseName)</small></td>
                                    <td>@item.GenerationDate.ToString("MMM dd, yyyy")                        </td>
                                    <td>@Html.DisplayFor(modelItem => item.EndUser.UserName)                </td>
                                    <td>
                                        @if (item.IsActive == true)
                                        {
                                            WriteLiteral("<i class='fa fa-check-square text-navy'></i>");
                                        }
                                        else
                                        {
                                            WriteLiteral("<i class='fa fa-square text-navy'></i>");
                                        }
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.BucketId }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.BucketId }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.BucketId })
                                    </td>
                                </tr>
                                index = index + 1;
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>