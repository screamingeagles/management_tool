@model IEnumerable<ManagementTool.Models.C006_SubPhase>

@{
    int index = 1;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <br />
    <div class="col-lg-12">
        <button class="btn btn-sm btn-primary pull-left m-t-n-xs" type="button" onclick="window.location.href='@Url.Content("~/SubPhase/Create")'"><strong>Add New Sub Phase</strong></button>
    </div>


    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Complete Sub Phase Listing</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th colspan="9">
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Select Project </label>
                                        <div class="col-lg-10">
                                            @Html.DropDownList("ProjectId", null, "Select Project", htmlAttributes: new { @class = "form-control m-b", onchange = "FillProjectDetails(this);" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Select Phase </label>
                                        <div class="col-lg-10">
                                            @using (Html.BeginForm("Index", "SubPhase", FormMethod.Post)) {
                                                @Html.DropDownList("PhaseId", null, "Select Phase", htmlAttributes: new { @class = "form-control m-b", onchange = "this.form.submit()", disabled="disabled" })
                                            }
                                        </div>
                                    </div>
                                </th>
                            </tr>
                            <tr>
                                <th>#</th>
                                <th>Project Name</th>
                                <th>Phase Name  </th>
                                <th>Sub Phase Name</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Generated By</th>
                                <th>Generated Date </th>
                                <th>Action      </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if ((Model == null) || (Model.Count() == 0))
                            {
                                <tr>
                                    <td colspan="9">
                                        <div class="col-md-9">
                                            <div class="forum-icon">
                                                <i class="fa fa-bomb"></i>
                                            </div>
                                            <div class="forum-item-title">No Items Found, Please Select Any project or Phase</div>
                                        </div>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@index                                      </td>
                                        <td>@item.C005_PHASE.C004_PROJECT.ProjectName   </td>
                                        <td>@item.C005_PHASE.PhaseName                  </td>
                                        <td>@item.SubPhaseName                          </td>

                                        <td>@item.StartDate.ToString("MMM dd, yyyy")</td>
                                        <td>@item.EndDate.ToString("MMM dd, yyyy")</td>

                                        <td>@Html.DisplayFor(modelItem => item.EndUser.UserName)                </td>
                                        <td>@item.GeneratedDate.ToString("MMM dd, yyyy")                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.SubPhaseId }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.SubPhaseId }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.SubPhaseId })
                                        </td>
                                    </tr>
                                    index = index + 1;
                                }
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function FillProjectDetails(obj) {
        var sel = obj.options[obj.selectedIndex].value;
        if (sel == "") { return; }

        var postedContent = { ProjectId: sel }
        $.ajax({
            type: "POST",
            url: "/Phase/GetProjectPhases",
            data: postedContent,
            success: function (message) {
                $("#PhaseId").prop('disabled', false);
                $("#PhaseId").empty();
                $('#PhaseId').append($('<option>', { value: '', text: 'Select Phase', selected: true }));
                var res = message.data;

                if (res.length > 0) {
                    for (var i = 0; i < message.data.length; i++) {
                        $('#PhaseId').append($('<option>', { value: message.data[i].PhaseId, text: message.data[i].PhaseName }));
                    } // end of for loop
                } // end of if for length
            },
            error: function (xerr) {
                /* $('#txteng').val("err : " +xerr);*/
            }
        });

    }
</script>
