@model ManagementTool.Models.C006_SubPhase

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">

    <div class="col-lg-10 col-lg-offset-1">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Edit Sub Phase : @Model.SubPhaseName</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    @using (Html.BeginForm("Edit", "SubPhase", FormMethod.Post, new { id = "frmMain" }))
                    {
                        @Html.AntiForgeryToken();
                        @Html.HiddenFor(model => model.SubPhaseId)

                        <!-- / Phase Name -->
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Select Phase </label>
                            <div class="col-lg-9">
                                @Html.DropDownList("PhaseId", null, "Select Phase", htmlAttributes: new { @class = "form-control m-b" })
                            </div>
                        </div>


                        <!-- / Sub Phase Name -->
                        <div class="form-group">
                            <label class="col-lg-3 control-label">New Sub Phase Name</label>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(model => model.SubPhaseName, htmlAttributes: new { @class = "form-control m-b" })
                            </div>
                        </div>


                        <!-- / Save Button -->
                        <div class="form-group">
                            <div class="col-lg-12">
                                <button class="btn btn-sm btn-primary pull-left m-t-n-xs" type="submit">
                                    <strong>Save</strong>
                                </button>

                                @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-sm btn-primary pull-right m-t-n-xs" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(
    function () {
        $("#frmMain").validate({
            rules: {
                SubPhaseName: {
                    minlength: 3,
                    maxlength: 250,
                    required: true
                },
                PhaseId: { required: true },
            },
            highlight: function (element) {
                $(element).closest('.control-group').addClass('has-error');
            },
            unhighlight: function (element) {
                $(element).closest('.control-group').removeClass('has-error');
            },
            submitHandler: function (form) { // for demo
                form.submit();
                return false;
            }
        });
    });
</script>
