@model ManagementTool.Models.C006_SubPhase

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">

    <div class="col-lg-10 col-lg-offset-1">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Are you sure you want to delete Sub Phase : @Html.DisplayFor(model => model.SubPhaseName)</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">

                    <!-- / Phase Name -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Phase Name</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.C005_PHASE.PhaseName, htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- / Sub Phase Name -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Sub Phase Name</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.SubPhaseName, htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>


                    <!-- / Start Date -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Start Date</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.StartDate, "{0:dd-MMM-yyyy}", htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- / End Date -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">End Date</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.EndDate, "{0:dd-MMM-yyyy}", htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>



                    <!-- / Generated By -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Record Generated By </label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.EndUser.UserName, htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- / Generated Date -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Record Generated Date</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.GeneratedDate, "{0:dd-MMM-yyyy HH:mm}", htmlAttributes: new { @readonly = "readonly", @class = "form-control m-b", @style = "font-weight:normal; background-color : white;" })
                        </div>
                    </div>

                    <!-- / Close Button -->
                    <div class="form-group">
                        <div class="col-lg-12">
                            @using (Html.BeginForm()) {
                                @Html.AntiForgeryToken()                                
                                    <input type="submit" value="Delete" class="btn btn-default" /> 
                            }
                            @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-sm btn-primary pull-right m-t-n-xs" })
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>