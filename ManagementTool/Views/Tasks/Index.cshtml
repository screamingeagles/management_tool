@model List<ManagementTool.Common.Service>

@{
    int index = 1;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="row">
    <br />
    <div class="col-lg-12">
        <button class="btn btn-sm btn-primary pull-left m-t-n-xs" type="button" onclick="window.location.href='@Url.Content("~/Tasks/Create")'"><strong>Add New Task</strong></button>
    </div>


    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Complete Tasks Listing</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#               </th>
                                <th>Service Id      </th>
                                <th>Location/Company</th>
                                <th>Project >> Phase >> SubPhase >> Bucket </th>
                                <th>Area >> Sub Area</th>
                                <th>Task Name       </th>
                                <th>End Date        </th>
                                <th>Task Status     </th>
                                <th>Active          </th>
                                <th>Generated By    </th>
                                <th>Generated Date  </th>
                                <th>Action          </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@index</td>
                                    <td><small>@item.ServiceId  </small></td>
                                    <td><small>@item.LocationName >> @item.CompanyName</small></td>
                                    <td><small>@item.ProjectName >> @item.PhaseName >> @item.SubPhaseName >> @item.BucketName</small></td>
                                    <td><small>@item.AreaName >> @item.SubAreaName</small></td>
                                    <td><small>@item.ProjectName</small></td>
                                    <td><small>@item.EndDate.Value.ToString("dd-MMM-yyyy")</small></td>
                                    <td><small>@item.Status     </small></td>
                                    <td>
                                        @if (item.isActive == true)
                                        {
                                            WriteLiteral("<i class='fa fa-check-square text-navy'></i>");
                                        }
                                        else
                                        {
                                            WriteLiteral("<i class='fa fa-square text-navy'></i>");
                                        }
                                    </td>
                                    <td><small>@item.CreateByName</small></td>
                                    <td><small>@item.GeneratedDate.ToString("MMM dd, yyyy")</small></td>
                                    <td>
                                        <small>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.ServiceId }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.ServiceId }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.ServiceId })
                                        </small>
                                    </td>
                                </tr>
                                index = index + 1;
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

</div>