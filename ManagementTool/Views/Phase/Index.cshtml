@model IEnumerable<ManagementTool.Models.C005_PHASE>

@{
    int index = 1;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="row">
    <br />
    <div class="col-lg-12">
        <button class="btn btn-sm btn-primary pull-left m-t-n-xs" type="button" onclick="window.location.href='@Url.Content("~/Phase/Create")'"><strong>Add New Phase</strong></button>
    </div>


    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Complete Phase Listing</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th colspan="9">
                                    <label class="col-lg-2 control-label m-b">Select Project : </label>
                                    <div class="col-lg-10">
                                        @using (Html.BeginForm("Index", "Phase", FormMethod.Post))
                                        {
                                            @Html.DropDownList("ProjectId", null, "Select Project", htmlAttributes: new { @class = "form-control m-b", onchange = "this.form.submit()" })
                                        }
                                        
                                    </div>
                                </th>
                            </tr>
                            <tr>
                                <th>#</th>
                                <th>Project Name</th>
                                <th>Phase Name  </th>
                                <th>Start Date  </th>
                                <th>End Date    </th>                                
                                <th>Status      </th>
                                <th>Generated By</th>
                                <th>Generated Date </th>
                                <th>Action      </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if ((Model == null) || (Model.Count() == 0))
                            {
                                <tr>
                                    <td colspan="9">
                                        <div class="col-md-9">
                                            <div class="forum-icon">
                                                <i class="fa fa-bomb"></i>
                                            </div>
                                            <div class="forum-item-title">No Items Found, Please Select Any project</div>
                                        </div>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@index                              </td>
                                        <td>@item.C004_PROJECT.ProjectName      </td>
                                        <td>@item.PhaseName</td>
                                        <td>@item.StartDate.ToString("dd-MMM-yyyy")</td>
                                        <td>@item.EndDate.ToString("dd-MMM-yyyy")</td>
                                        <td>
                                            @if (item.IsActive == true)
                                            {
                                                WriteLiteral("<i class='fa fa-check-square text-navy'></i>");
                                            }
                                            else
                                            {
                                                WriteLiteral("<i class='fa fa-square text-navy'></i>");
                                            }
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.EndUser.UserName)                </td>
                                        <td>@item.GeneratedDate.ToString("MMM dd, yyyy")                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.PhaseId }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.PhaseId }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.PhaseId })
                                        </td>
                                    </tr>
                                    index = index + 1;
                                }
                            }                            
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>